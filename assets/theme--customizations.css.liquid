/* Add your theme customizations below */
@media screen and (min-width: 767px) {
  .header--menu {
      margin: 0 -16px;
      display: flex;
      align-items: center;
      height: 76px;
  }

  .header--top-row {
        height: 76px;
      align-items: center;
  }

  .header--cart {
        position: initial;
      display: flex;
      order: 2;
      justify-self: flex-end;
      -webkit-box-flex: 0;
      -ms-flex-positive: 0;
      flex-grow: 0;
      -ms-flex-order: 2;
      height: 40px;
  }

  .header--root {
      background: rgba(255,255,255,.85);
      height: 100px;
      padding: 25px 50px;
  }

  .header--logo {
    flex-grow: 0;
  }

  .x-menu--level-1--link > a {
      padding: 42px 16px;
  }

  .x-menu--bg {
    background: rgba(255,255,255,.85);
  }


  .header--root .x-menu {
    width: 100%;
    display: flex;
    align-items: center;
  }

  .header--root .x-menu--level-1--container {
    display: flex;
        width: 100%;
  }

  .header--root li.x-menu--level-1--link.is-contact-button {
      justify-self: auto;
      display: flex;
          align-self: center;
      margin-left: auto;
      margin-right: 20px;
  }

  .header--root li.x-menu--level-1--link.is-contact-button a {
    border: 2px solid #131d60;
    background: transparent; 
    color: #131d60;
    padding: 10px 25px;
    transition: all ease .2s;
  }

  .header--root li.x-menu--level-1--link.is-contact-button a:hover {
    background: #131d60 ;
    color: #fff;
  }

  .x-menu--overlap-icon {
    display: none;
  }

}



