{% capture shareurl %}{{ shop.url }}{{ article.url }}{% endcapture %}

{% if section.settings.article-share-twitter %}
  <a
    class="share-item twitter"
    href="https://twitter.com/intent/tweet?text=Check%20out%20this%20{%if template contains "article" or template contains "blog"%}blog%20post{% elsif template contains "product" %}product{%endif%}:+{{ shareurl }}"
  >
    {% include 'framework--icons', icon: 'twitter' %}
    <span>Tweet</span>
  </a>
{% endif %}

{% if section.settings.article-share-facebook %}
  <a
    class="share-item facebook"
    href="http://www.facebook.com/sharer.php?u={{ shareurl }}&t={{ article.title }}"
  >
    {% include 'framework--icons', icon: 'facebook' %}
    <span>Like</span>
  </a>
{% endif %}

{% if section.settings.article-share-pinterest %}
  {% if article.image %}
    <a
      class="share-item pinterest"
      href="http://pinterest.com/pin/create/button/?url={{ shareurl }}&media={{ article.image | img_url: '2000x' }}&description={{ article.title | strip_html | escape | replace: ' ', '%20' }}"
    >
      {% include 'framework--icons', icon: 'pinterest' %}
      <span>Pin</span>
    </a>
  {% endif %}
{% endif %}
