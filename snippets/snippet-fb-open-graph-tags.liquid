{% assign twitter_setting = settings.social--twitter--url %}

{%- assign og_title = page_title -%}
{%- assign og_url = canonical_url -%}
{%- assign og_type = 'website' -%}
{%- assign og_description = page_description | default: shop.description | default: shop.name -%}

{% comment %}
  Template specific overides
{% endcomment %}
{%- if template contains 'product' -%}
  {%- assign og_title = product.title | strip_html -%}
  {%- assign og_type = 'product' -%}
  {%- capture og_image_tags -%}
    {%- for media in product.media limit:3 -%}
      {%- comment %}<locksmith:f47c>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image" content="http:{{ media | img_url: '1024x1024' }}">{% endif -%}
        {%- comment %}original: <meta property="og:image" content="http:{{ media | img_url: '1024x1024' }}">{%- endcomment %}
      {%- comment %}</locksmith:f47c>{% endcomment -%}
    {%- endfor -%}
  {%- endcapture -%}
  {%- capture og_image_secure_url_tags -%}
    {%- for media in product.media limit:3 -%}
      {%- comment %}<locksmith:04cb>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image:secure_url" content="http:{{ media | img_url: '1024x1024' }}">{% endif -%}
        {%- comment %}original: <meta property="og:image:secure_url" content="http:{{ media | img_url: '1024x1024' }}">{%- endcomment %}
      {%- comment %}</locksmith:04cb>{% endcomment -%}
    {%- endfor -%}
  {%- endcapture -%}

{%- elsif template contains 'article' -%}
  {%- assign og_title = article.title | strip_html -%}
  {%- assign og_type = 'article' -%}
  {%- assign og_description = article.excerpt_or_content | strip_html -%}
  {%- if article.image -%}
    {%- capture og_image_tags -%}
      {%- comment %}<locksmith:c365>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image" content="http:{{ article.image | img_url: '1024x1024' }}">{% endif -%}
        {%- comment %}original: <meta property="og:image" content="http:{{ article.image | img_url: '1024x1024' }}">{%- endcomment %}
      {%- comment %}</locksmith:c365>{% endcomment -%}
    {%- endcapture -%}
    {%- capture og_image_secure_url_tags -%}
      {%- comment %}<locksmith:ef09>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image:secure_url" content="https:{{ article.image | img_url: '1024x1024' }}">{% endif -%}
        {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ article.image | img_url: '1024x1024' }}">{%- endcomment %}
      {%- comment %}</locksmith:ef09>{% endcomment -%}
    {%- endcapture -%}
  {%- endif -%}

{%- elsif template contains 'page' -%}
  {%- if page.content contains "<img" -%}
    {%- assign src = page.content | split: 'src="' -%}
    {%- assign src = src[1] | split: '"' | first -%}
    {%- if src -%}
      {%- comment %}<locksmith:2fdb>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image" content="http:{{ src }}">{% endif -%}
        {%- comment %}original: <meta property="og:image" content="http:{{ src }}">{%- endcomment %}
      {%- comment %}</locksmith:2fdb>{% endcomment -%}
      {%- comment %}<locksmith:f70a>{% endcomment -%}
        {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image:secure_url" content="https:{{ src }}">{% endif -%}
        {%- comment %}original: <meta property="og:image:secure_url" content="https:{{ src }}">{%- endcomment %}
      {%- comment %}</locksmith:f70a>{% endcomment -%}
    {%- endif -%}
  {%- endif -%}

{%- elsif template == 'password' -%}
  {%- assign og_title = shop.name -%}
  {%- assign og_url = shop.url -%}
  {%- assign og_description = shop.description | default: shop.name -%}
{% comment %} change index--disabled to index to activate {% endcomment %}
{%- elsif template contains 'index--disabled' -%}
  {%- capture og_image_tags -%}{%- comment %}<locksmith:b195>{% endcomment -%}{%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image" content="http://">{% endif -%}{%- comment %}original: <meta property="og:image" content="http://">{%- endcomment %}{%- comment %}</locksmith:b195>{% endcomment -%}{%- endcapture -%}
  {%- capture og_image_secure_url_tags -%}
    {%- comment %}<locksmith:4654>{% endcomment -%}
      {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:image:secure_url" content="https://">{% endif -%}
      {%- comment %}original: <meta property="og:image:secure_url" content="https://">{%- endcomment %}
    {%- comment %}</locksmith:4654>{% endcomment -%}
  {%- endcapture -%}
{%- endif -%}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
{%- comment %}<locksmith:8361>{% endcomment -%}
  {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:title" content="{{ og_title }}">{% endif -%}
  {%- comment %}original: <meta property="og:title" content="{{ og_title }}">{%- endcomment %}
{%- comment %}</locksmith:8361>{% endcomment -%}
{%- comment %}<locksmith:2cae>{% endcomment -%}
  {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:type" content="{{ og_type }}">{% endif -%}
  {%- comment %}original: <meta property="og:type" content="{{ og_type }}">{%- endcomment %}
{%- comment %}</locksmith:2cae>{% endcomment -%}
{%- comment %}<locksmith:1ab9>{% endcomment -%}
  {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta property="og:description" content="{{ og_description }}">{% endif -%}
  {%- comment %}original: <meta property="og:description" content="{{ og_description }}">{%- endcomment %}
{%- comment %}</locksmith:1ab9>{% endcomment -%}
{%- if template.name == 'product' -%}
  {%- comment %}<locksmith:6e7e>{% endcomment -%}
    {%- capture var %}{% render 'locksmith-variables', variable: 'access_granted' %}{% endcapture %}{% if var == 'true' %}<meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">{% endif -%}
    {%- comment %}original: <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">{%- endcomment %}
  {%- comment %}</locksmith:6e7e>{% endcomment -%}
  {%- comment %}<locksmith:1552>{% endcomment -%}
    {%- capture var %}{% render 'locksmith-variables', variable: 'access_granted' %}{% endcapture %}{% if var == 'true' %}<meta property="og:price:currency" content="{{ cart.currency.iso_code }}">{% endif -%}
    {%- comment %}original: <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">{%- endcomment %}
  {%- comment %}</locksmith:1552>{% endcomment -%}
{%- endif -%}
{{ og_image_tags }}
{{ og_image_secure_url_tags }}

<meta name="twitter:site" content="{{ twitter_setting | split: 'twitter.com/' | last | prepend: '@' }}">
<meta name="twitter:card" content="summary_large_image">
{%- comment %}<locksmith:f512>{% endcomment -%}
  {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:title" content="{{ og_title }}">{% endif -%}
  {%- comment %}original: <meta name="twitter:title" content="{{ og_title }}">{%- endcomment %}
{%- comment %}</locksmith:f512>{% endcomment -%}
{%- comment %}<locksmith:480a>{% endcomment -%}
  {%- capture var %}{% render 'locksmith-variables', variable: 'transparent', hiding_scope: 'resource' %}{% endcapture %}{% if var == 'true' %}<meta name="twitter:description" content="{{ og_description }}">{% endif -%}
  {%- comment %}original: <meta name="twitter:description" content="{{ og_description }}">{%- endcomment %}
{%- comment %}</locksmith:480a>{% endcomment -%}
